<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GamePlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/player1TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/player2TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:text="Player 2"
            android:textAlignment="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="105dp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <Button
            android:id="@+id/BTN1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick1"/>

        <Button
            android:id="@+id/BTN2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick2"/>

        <Button
            android:id="@+id/BTN3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <Button
            android:id="@+id/BTN4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick4"/>

        <Button
            android:id="@+id/BTN5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick5"/>

        <Button
            android:id="@+id/BTN6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <Button
            android:id="@+id/BTN7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick7"/>

        <Button
            android:id="@+id/BTN8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick8"/>

        <Button
            android:id="@+id/BTN9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:onClick="BTNClick9"/>

    </LinearLayout>

    <Button
        android:id="@+id/resetBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"/>



</LinearLayout>